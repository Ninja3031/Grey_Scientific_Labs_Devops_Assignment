// Automates code checkout, Docker image builds,
// container orchestration, and cleanup.
// Designed to demonstrate CI/CD fundamentals.

pipeline {

    // Allows pipeline to run on any available Jenkins agent
    agent any

    stages {

        // Pull latest code from the main branch
        stage('Checkout') {
            steps {
                git branch: 'main',
                url: 'https://github.com/your-username/devops-assignment.git'
            }
        }

        // This command builds Docker images for backend and frontend services
        stage('Build Docker Images') {
            steps {
                sh '''
                  docker build -t backend-app ./backend
                  docker build -t frontend-app ./frontend
                '''
            }
        }

        // Start application stack using Docker Compose
        stage('Run Containers') {
            steps {
                sh '''
                  docker-compose up -d
                  docker-compose ps
                '''
            }
        }

        // Cleanup resources to avoid conflicts on shared CI agents
        stage('Cleanup') {
            steps {
                sh 'docker-compose down'
            }
        }
    }

    // Post-build actions
    post {
        success {
            echo "CI/CD pipeline executed successfully"
        }
    }

    // Future CI/CD Enhancements which can be done during actual deployment
    // - Blue/Green deployments for zero downtime
    // - Canary releases for controlled rollouts
    // - Automated rollback strategies
}